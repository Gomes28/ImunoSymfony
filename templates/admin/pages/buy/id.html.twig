{% extends 'admin/base.html.twig' %}

{% block content %}
    <!-- This example requires Tailwind CSS v2.0+ -->
    <div class="bg-white">
        <div style="margin-left: 350px" class="max-w-5xl mx-auto px-4 py-16 sm:px-6 sm:py-24">
            <div class="max-w-xl">
                <h1 id="your-orders-heading" class="text-3xl font-extrabold tracking-tight text-gray-900">Dados do Pedido ID: {{ buy.id }}</h1>
                <p class="mt-2 text-sm text-gray-500">Todos os dados do pedido</p>
            </div>

                <div class="mt-12 space-y-16 sm:mt-16">
                        <section aria-labelledby="4376-heading">
                            <div class="space-y-1 md:flex md:items-baseline md:space-y-0 md:space-x-4">
                                <h2 id="4376-heading" class="text-lg font-medium text-gray-900 md:flex-shrink-0">Pedido #{{ buy.id }}</h2>
                                <div class="space-y-5 md:flex-1 md:min-w-0 sm:flex sm:items-baseline sm:justify-between sm:space-y-0">
                                    <p class="text-sm font-medium text-gray-500"></p>
                                    <div class="flex text-sm font-medium">
                                        <a href="#" class="text-indigo-600 hover:text-indigo-500">Status do Pagamento</a>
                                        <div class="border-l border-gray-200 ml-4 pl-4 sm:ml-6 sm:pl-6">
                                            <a href="#" class="text-indigo-600 hover:text-indigo-500">{{ buy.Status }}</a>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="mt-6 -mb-6 flow-root border-t border-gray-200 divide-y divide-gray-200">
                                <div class="py-6 sm:flex">
                                    <div class="flex space-x-4 sm:min-w-0 sm:flex-1 sm:space-x-6 lg:space-x-8">
                                        <img src="{{ asset('uploads/products/' ~ buy.productId.imageFilename) }}" alt="product image" class="flex-none w-20 h-20 rounded-md object-center object-cover sm:w-48 sm:h-48">
                                        <div class="pt-1.5 min-w-0 flex-1 sm:pt-0">
                                            <h3 class="text-sm font-medium text-gray-900">
                                                <a href="#">{{ buy.productId.name }}</a>
                                            </h3>
                                            <p class="text-sm text-gray-500 truncate">
                                                <span>Quantidade</span>
                                                <span class="mx-1 text-gray-400" aria-hidden="true">&middot;</span>
                                                <span>{{ buy.BuyVacin.quantity|number_format(0, '.', '') }}</span>
                                            </p>
                                            <p class="mt-1 font-medium text-gray-500">R$: {{ buy.productId.price|number_format(2, ',', '.') }}</p>

                                            <p class="text-lg text-gray-900 truncate">
                                                <span>Total</span>
                                                <span class="mx-1 text-gray-400" aria-hidden="true">&middot;</span>
                                                <span>R$: {{ buy.totalPayment }}</span>
                                            </p>

                                            <p class="text-lg text-gray-900 truncate">
                                                <span>Outros Recebedores</span>
                                                <h1>{{ buy.BuyVacin.OthersVacinated }}</h1>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </section>
                    <br/>
                </div>
        </div>
    </div>
{% endblock %}